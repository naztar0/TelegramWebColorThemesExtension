{
  "name": "Telegram Web Color Themes",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Change theme color for Telegram Web",
  "author": "Neulen",
  "homepage_url": "https://webz.telegram.org/",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": "icons/icon19.png",
    "default_title": "View panel",
    "default_popup": "src/popup.html"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://webz.telegram.org/*"
  ],
  "content_scripts": [
    {
      "matches": [ "https://webz.telegram.org/*" ],
      "js": [ "src/js/inject.js" ]
    }
  ]
}